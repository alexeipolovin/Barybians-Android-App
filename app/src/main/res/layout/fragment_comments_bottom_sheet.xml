<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commentsBottomSheetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            tools:text="3 likes"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/commentsBottomSheetMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            tools:text="No comments yet"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsBottomSheetRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/commentsBottomSheetEditor"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:focusableInTouchMode="true"
                style="?commentInputStyle"
                android:hint="@string/add_comment"
                android:layout_weight="1"
                android:maxLines="3"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/commentsBottomSheetSend"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                tools:srcCompat="@drawable/ic_send_blue" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
