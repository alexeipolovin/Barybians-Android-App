<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/incoming_message_background"
    android:layout_gravity="start"
    android:gravity="start"
    android:paddingStart="@dimen/message_padding"
    android:paddingTop="@dimen/message_padding"
    android:paddingEnd="@dimen/message_padding"
    android:paddingBottom="2dp"
    android:layout_marginBottom="@dimen/space_between_messages">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemIncomingMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Incoming message sample"
        style="?accentTextStyle"/>

    <TextView
        android:id="@+id/itemIncomingMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0:34"/>
</LinearLayout>