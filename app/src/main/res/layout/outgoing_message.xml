<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="end"
    android:background="@drawable/outgoing_message_background"
    android:paddingStart="@dimen/message_padding"
    android:paddingTop="@dimen/message_padding"
    android:paddingEnd="@dimen/message_padding"
    android:paddingBottom="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemOutgoingMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Outgoing message sample"
        style="?accentTextStyle"/>

    <TextView
        android:id="@+id/itemOutgoingMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0:38"/>
</LinearLayout>